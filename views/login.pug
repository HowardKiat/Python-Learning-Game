extends layout

block head
  title Edit Task
  link(rel= 'stylesheet', href= '/stylesheets/login.css')

.login-container
  h2 Login
  p(style="color: red;") #{error}
  form(action='/login', method='post')
    label(for='user_email') Email Address
    input#username(type='email', name='user_email')
    
    label(for='user_password') Password
    input#password(type='password', name='user_password')
    
    button(type='submit') Login
    
    p No account? Register
      a(href="register") here
